{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "module": "ES2022",
    "verbatimModuleSyntax": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ]
    },
    "types": ["@astrojs/image/client"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
